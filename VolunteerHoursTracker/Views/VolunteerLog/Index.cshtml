@model IEnumerable<VolunteerHoursTracker.ViewModels.VolunteerLogViewModel>

@{
    ViewData["Title"] = "My Volunteer Hours";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>
            <hr />
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Log New Hours
            </a>
            <a asp-action="Leaderboard" class="btn btn-info">
                <i class="bi bi-trophy"></i> View Leaderboard
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Total Hours: @Model.Sum(m => m.HoursWorked).ToString("F2")</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Activity</th>
                            <th>Hours</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                <td>@item.Activity</td>
                                <td>@item.HoursWorked.ToString("F2")</td>
                                <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">No volunteer hours logged yet!</h4>
                    <p>Start tracking your volunteer work by clicking the "Log New Hours" button above.</p>
                </div>
            </div>
        </div>
    }
</div>