@model VolunteerHoursTracker.ViewModels.VolunteerLogViewModel

@{
    ViewData["Title"] = "Delete Volunteer Hours";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            <hr />

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Are you sure you want to delete this?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Activity</dt>
                        <dd class="col-sm-9">@Model.Activity</dd>

                        <dt class="col-sm-3">Hours Worked</dt>
                        <dd class="col-sm-9">@Model.HoursWorked.ToString("F2")</dd>

                        <dt class="col-sm-3">Date</dt>
                        <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>